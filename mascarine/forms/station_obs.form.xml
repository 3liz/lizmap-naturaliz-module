<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1" allowAnyOrigin="true">
    
    <menulist ref="exposition_station">
        <label locale="mascarine~observation.input.exposition_station"/>
        <emptyitem>---</emptyitem>
        <datasource dao="mascarine~nomenclature" method="findByField" criteria="exposition_station"
                    labelproperty="valeur" valueproperty="code"/>
    </menulist>
    
    <menulist ref="lumiere_station">
        <label locale="mascarine~observation.input.lumiere_station"/>
        <emptyitem>---</emptyitem>
        <datasource dao="mascarine~nomenclature" method="findByField" criteria="lumiere_station"
                    labelproperty="valeur" valueproperty="code"/>
    </menulist>
    
    <input ref="pente_min_station" type="decimal">
        <label locale="mascarine~observation.input.pente_min_station"/>
    </input>
    
    <input ref="pente_moy_station" type="decimal">
        <label locale="mascarine~observation.input.pente_moy_station"/>
    </input>
    
    <input ref="pente_max_station" type="decimal">
        <label locale="mascarine~observation.input.pente_max_station"/>
    </input>
    
    <input ref="alt_min_station" type="decimal">
        <label locale="mascarine~observation.input.alt_min_station"/>
    </input>
    
    <input ref="alt_moy_station" type="decimal">
        <label locale="mascarine~observation.input.alt_moy_station"/>
    </input>
    
    <input ref="alt_max_station" type="decimal">
        <label locale="mascarine~observation.input.alt_max_station"/>
    </input>
    
    <input ref="aire_station" type="decimal" minvalue="0.0">
        <label locale="mascarine~observation.input.aire_station"/>
    </input>
    
    <menulist ref="aire_unit_station">
        <label locale="mascarine~observation.input.aire_unit_station"/>
        <emptyitem>---</emptyitem>
        <datasource dao="mascarine~nomenclature" method="findByField" criteria="aire_unit_station"
                    labelproperty="valeur" valueproperty="code"/>
    </menulist>
    
    <input ref="recouvrement_station" type="decimal" minvalue="0.0" maxvalue="100.0">
        <label locale="mascarine~observation.input.recouvrement_station"/>
    </input>
    
    <input ref="hauteur_station" type="decimal" minvalue="0.0">
        <label locale="mascarine~observation.input.hauteur_station"/>
    </input>
    
    <input ref="hauteur_min_station" type="decimal" minvalue="0.0">
        <label locale="mascarine~observation.input.hauteur_min_station"/>
    </input>
    
    <input ref="hauteur_max_station" type="decimal" minvalue="0.0">
        <label locale="mascarine~observation.input.hauteur_max_station"/>
    </input>
    
    <input ref="hauteur_canopee_station" type="decimal" minvalue="0.0">
        <label locale="mascarine~observation.input.hauteur_canopee_station"/>
    </input>
    
    <textarea ref="remarques_station">
        <label locale="mascarine~observation.input.remarques_station"/>
    </textarea>
    
</form>
